def water_jug(x,y,target):
    a,b=0,0
    while a!=target and b!=target:
        print(a,b)
        if a==0: a=x              # fill jug1
        elif b==y: b=0            # empty jug2
        else:                     # pour jug1 â†’ jug2
            pour=min(a,y-b)
            a-=pour; b+=pour
    print(a,b,"Solved!")

water_jug(4,3,2)
