def water_jug(x,y,target):
    a,b=0,0
    while a!=target and b!=target:
        print(a,b)
        if a==0: a=x              # fill jug1
        elif b==y: b=0            # empty jug2
        else:                     # pour jug1 â†’ jug2
            pour=min(a,y-b)
            a-=pour; b+=pour
    print(a,b,"Solved!")

water_jug(4,3,2)
output
0 0
4 0
0 3
4 3
1 3
3 0
1 0
3 3
0 1
4 2
Solved!
